globalFeedback = 1;

function updateGain()
  global(gainFactor, WetGain)
  local()
  (
    gainFactor = 10^(WetGain/20);
  );

function updateRange()
(
  SyncMode ? (
    SyncMode > 3 ? (
      maxTime = 2*tempo/60;
      minTime = 0;
    ) : (
      maxTime = 4*tempo/60;
      minTime = 0;
    );
  ) : (
    minTime = 4/100;
    maxTime = 4;
  );
