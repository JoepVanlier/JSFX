);


function scope.drawMovingSignal( xp, yp, wp, hp, rpos, endpos, startpos, scaling, sampleSize, rr, gg, bb, fill)
  instance(w, h, x, y, dx, xcoord, hh, val, mn, mx, last_min, last_max)
