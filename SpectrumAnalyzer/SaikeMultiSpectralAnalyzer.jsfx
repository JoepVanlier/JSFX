    loop(dx,
      val = scaling * rpos[];
      rpos = ( rpos > endpos ) ? startpos : rpos + 1;
      (val > 1.0) ? val = 1.0 : ( val < -1.0 ? val = -1.0 );
      mx = max(mx, val);
      mn = min(mn, val);
    );
    
    mn = y + hh * mn + hh;
    mx = y + hh * mx + hh;
    (fill == 1) ? (
      gfx_a=slider37;
      gfx_line(xcoord, mn, xcoord, mx);
    );
