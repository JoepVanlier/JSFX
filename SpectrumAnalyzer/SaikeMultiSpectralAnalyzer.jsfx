function scope.drawGrid(xp, yp, wp, hp, scaling)
  instance(w, h, x, y, dx, last, xcoord, hh, sig)
  globals(gfx_r, gfx_g, gfx_b, gfx_a, gfx_x, gfx_y, bufl, slider40)
(
  gfx_r=gfx_g=gfx_b=gfx_a=.5;
  gfx_a=0.8 * slider40;
  y = yp + 0.5*hp;
  while( y<(yp+hp) ? ( 
    gfx_line(0, y, wp, y);
    y = y + 50*scaling;
    ) );
  
  y = yp + 0.5*hp;
  while( y>yp ? ( 
    gfx_line(0, y, wp, y);
    y = y - 50*scaling;
    ) );
    
  x = xp;
  while( x<(xp+wp) ? ( 
    gfx_line(x, yp, x, yp+hp);
    x = x + .1 * w;
    ) );
);
  
