    i=pwr=0;
    ipi = 1.0 / $pi;
    loop(fftsize*.5+1,
       windowpos=i*dwindowpos;
       pwr += (window[i] = (
         //rectangular,hamming,blackman-harris,blackman,flat-top,gaussian
         windowtype==0 ? ( 1 ) :
         windowtype==1 ? ( 0.53836 - cos(windowpos)*0.46164 ) :
         windowtype==2 ? ( 0.35875 - 0.48829 * cos(windowpos) + 0.14128 * cos(2*windowpos) - 0.01168 * cos(3*windowpos) ) :
         windowtype==3 ? ( 0.42659 - 0.49656 * cos(windowpos) + 0.076849 * cos(2.0*windowpos) ) :
         windowtype==4 ? ( 0.21557895 - 0.41663158 * cos(windowpos) + 0.277263158 * cos(2*windowpos) - 0.083578947 * cos(3*windowpos) + 0.006947368 * cos(4*windowpos) ) :
         windowtype==5 ? ( exp(- 5 * (windowpos * ipi - 1.0) * (windowpos * ipi - 1.0) ) )
         ) );
       i+=1;
    );
    pwr=.5/(pwr*2-window[i-1]);
    loop(fftsize*.5+1,window[i-=1]*=pwr);
