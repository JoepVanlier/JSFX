function mouse_run(x, y, w, h)
local()
instance(dx, dy, cx, cy, nx, ny)
global()
(
  (x == 0) ? (
    cx = x;
    cy = y;
  );
  
  (rand() < 0.01) ? (
    nx = x + rand() * w;
    ny = y + rand() * h;
  );
  dx = nx - cx;
  dy = ny - cy;
  
  cx += 0.1 * dx;
  cy += 0.1 * dy;
  
  (abs(dx) + abs(dy) < 0.3) ? (
    gfx_rect(cx, cy - 1, 1, 1);
  );
  
  gfx_rect(cx, cy, 1, 1);
  // gfx_rect(x, y, w, h);
);

