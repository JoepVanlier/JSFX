  yc == 0 ? yc = y;
  xc += diff * (rand() - 0.5) + 0.01 * (x - xc);
  yc += diff * (rand() - 0.5) + 0.01 * (y - yc);
  x = floor(xc);
  y = floor(yc);
  gfx_rect(x, y, 1, 1);
);

